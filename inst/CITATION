year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the cfb4th R package in publications, use:")

citEntry(entry = "Misc",
         author = personList(
         as.person("Jared Lee"),
         as.person("Sebastian Carl"),
         as.person("Ben Baldwin")
         ),
         title = "cfb4th: The SportsDataverse's R Package for College Football 4th Down Modeling.",
         url = c("https://cfb4th.sportsdataverse.org/"),
         year = year,
         note = note,
         textVersion = paste(
    "Jared Lee and Sebastian Carl and Ben Baldwin. cfb4th: The SportsDataverse's R Package for College Football 4th Down Modeling.",
    "Retrieved from https://cfb4th.sportsdataverse.org/"
  )
)
